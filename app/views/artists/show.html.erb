<section class="section has-text-white">
  <div class="columns has-text-centered">
    <div class="column is-half-mobile is-offset-one-quarter-mobile is-2-desktop is-offset-5-desktop">
      <%= image_tag url_for(@artist.photo) %>
      <p class="is-size-4 has-text-weight-semibold"><%= @artist.name %> <%= favorite_button(@artist) %></p>
    </div>
  </div>

  <br />

  <h2 class="is-size-4 has-text-weight-bold has-text-centered">Albums</h2>

  <br /> <hr />

  <div class="columns is-mobile is-multiline has-text-centered">
    <%= render @artist.albums %>
  </div>
</section>
