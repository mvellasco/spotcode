<section class="section has-text-white">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "label control" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "input", placeholder: "Your best email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label control" %>
      <%= f.password_field :password, autocomplete: "new-password",
                           class: "input" %>
      <% if @minimum_password_length %>
        <p class="help">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label control" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                           class: "input" %>
    </div>

    <div class="field is-grouped is-grouped-centered">
      <p class="control">
        <button type="submit" class="button is-primary is-outlined is-medium">
          Register
        </button>
      </p>
      <p class="control">
        <%= link_to "Go Back", root_path, class: "button is-light is-medium" %>
      </p>
    </div>
  <% end %>

</section>
